<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="viewModel"
            type="com.oss.digihealth.nur.ui.nursedesk.nurse_desk_vitals.ui.nextstepvital.viewmodel.NextVitalsViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="false"
        tools:openDrawer="end">


        <RelativeLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/favouriteDrawerCardView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="22dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_favourite_back_arrow"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>


            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:background="@color/white">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/favouriteDrawerCardView"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/previewLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fadeBlue"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:id="@+id/genderIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/ic_male_palceholder" />

                        <TextView
                            android:id="@+id/detailTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@+id/genderIcon"
                            android:fontFamily="@font/poppins"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText,MissingConstraints" />


                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mainLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="2dp">

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never">

                            <LinearLayout
                                android:layout_width="600dp"
                                android:layout_height="wrap_content"
                                android:animateLayoutChanges="true"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:background="@color/view" />

                                <LinearLayout
                                    android:layout_width="600dp"
                                    android:layout_height="40dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:weightSum="8"
                                    android:paddingEnd="5dp">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:gravity="center"
                                        android:text="S.No"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/dr_medium_text"
                                        tools:ignore="HardcodedText" />

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/view" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="3"
                                        android:paddingStart="5dp"
                                        android:paddingEnd="5dp"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:gravity="center"
                                        android:text="Vitals"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/dr_medium_text"
                                        tools:ignore="HardcodedText,RtlSymmetry" />

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/view" />


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.5"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:gravity="center"

                                        android:paddingStart="5dp"
                                        android:paddingEnd="5dp"
                                        android:text="Vitals Value"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/dr_medium_text"
                                        tools:ignore="HardcodedText,RtlSymmetry" />

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/view" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1.5"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:gravity="center"
                                        android:text="UoM"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/dr_medium_text"
                                        tools:ignore="HardcodedText" />

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/view" />


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:gravity="center"
                                        android:text="Action"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/dr_medium_text"
                                        tools:ignore="HardcodedText,RtlSymmetry" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/savevitalsRecyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                        tools:listitem="@layout/row_vitals"/>
                                </LinearLayout>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvVitalEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:paddingTop="48dp"
                        android:paddingBottom="48dp"
                        android:text="No Record Found !"
                        android:textColor="@color/grey"
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/llVitalButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/backCardView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/primaryGrey"
                            app:cardCornerRadius="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:drawableStart="@drawable/ic_baseline_arrow_white_12"
                                android:drawablePadding="7dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:padding="7dp"
                                android:text="Back"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dr_medium_text"
                                tools:ignore="HardcodedText" />
                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/saveCardView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/secondaryColor"
                                app:cardCornerRadius="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_save_white_12"
                                    android:drawablePadding="4dp"
                                    android:fontFamily="@font/poppins"
                                    android:padding="8dp"
                                    android:text="@string/save_label"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/clearCardView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:clickable="true"
                                android:focusable="true"
                                app:cardBackgroundColor="@color/primaryGrey"
                                app:cardCornerRadius="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:drawableStart="@drawable/ic_eraser_12"
                                    android:drawablePadding="7dp"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center_vertical"
                                    android:padding="7dp"
                                    android:text="Clear"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/dr_medium_text"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>


        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:background="#FFFFFF">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    style="@style/TabTextAppearance.TabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="@color/colorPrimaryDark"
                    app:tabTextColor="@color/black" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>


        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>


</layout>
