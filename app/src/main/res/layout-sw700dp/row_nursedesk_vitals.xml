<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:id="@+id/mainLinearLayout"

        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".40"
            android:gravity="center"
            android:text="S.No"
            android:fontFamily="@font/poppins"
            android:paddingVertical="10dp"
            android:textColor="@color/navColor"
            android:textSize="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/vitalsSerialno"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.10"
            android:textColor="@color/navColor"
            android:fontFamily="@font/poppins"
            android:textSize="@dimen/dr_medium_text"

            android:paddingStart="10dp"
            android:text="PIN"
            android:paddingVertical="10dp"
            android:id="@+id/vitalsPin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:layout_weight="1.10"
            android:textColor="@color/navColor"
            android:paddingStart="10dp"
            android:textSize="@dimen/dr_medium_text"

            android:paddingVertical="10dp"
            android:text="Mobile Number"
            android:id="@+id/vitalsMobileNumber"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.90"
            android:fontFamily="@font/poppins"
            android:textColor="@color/navColor"
            android:textSize="@dimen/dr_medium_text"
            android:paddingStart="10dp"
            android:text="@dimen/dr_medium_text"

            android:paddingVertical="10dp"
            android:id="@+id/vitalsPatientInformation"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight=".50"
            android:fontFamily="@font/poppins"
            android:textColor="@color/navColor"
            android:gravity="center"
            android:paddingStart="10dp"
            app:srcCompat="@drawable/vitalsaction"
            android:id="@+id/vitalsAction"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/view" />

</LinearLayout>
